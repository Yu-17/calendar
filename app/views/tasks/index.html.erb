<p>Month Calendar</p>
<%= link_to 'タスク追加', new_task_path %>
<%= month_calendar tasks: @tasks do |date, tasks| %>
    <%= date.day %>

    <% @tasks.each do |task| %>
        <div>
            <%= task.title %>
        </div>
    <% end %>
<% end %>


<p>************************************************************************************************</p>
<p>Week Calendar</p>
<%= week_calendar do |date| %>
    <%= date.day %>
<% end %>
