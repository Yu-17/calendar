<p>Monthly Calendar</p>
<%= link_to 'タスク追加', new_task_path %>
<%= month_calendar tasks: @tasks do |date, tasks| %>
    <%= date.day %>

    <% tasks.each do |task| %>
        <div>
        <% if date == task.start_time.to_date %>
            <%= task.title %>
        <% end %>
        </div>
    <% end %>
<% end %>




